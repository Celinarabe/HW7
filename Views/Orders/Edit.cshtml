@using Rabe_Celina_HW6.Models
@model Rabe_Celina_HW6.Models.Order
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit Order</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderID" />
            <div class="form-group">
                <label asp-for="OrderNumber" class="control-label"></label>:
                @Html.DisplayFor(m => m.OrderNumber, new { @class = "form-control" })
                <span asp-validation-for="OrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>:
                @Html.DisplayFor(m => m.OrderDate, new { @class = "form-control" })
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<h4>Products</h4>
<table class="table table-sm table-striped table-hover">
    <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Extended Price</th>
    </tr>
    @foreach (OrderDetail rd in Model.OrderDetails)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => rd.Product.Name)</td>
            <td>@Html.DisplayFor(modelItem => rd.Product.Price)</td>
            <td>@Html.DisplayFor(modelItem => rd.QuantityOrdered)</td>
            <td>@Html.DisplayFor(modelItem => rd.ExtendedPrice)</td>
        </tr>
    }
</table>
<div>
    <a asp-action="AddToOrder" asp-route-id="@Model.OrderID" class="btn btn-primary">Add Item to Order</a>
    <a asp-action="RemoveFromOrder" asp-route-id="@Model.OrderID" class="btn btn-primary">Edit Existing Items</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>